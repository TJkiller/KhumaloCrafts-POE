@model KhumaloCrafts.Models.Order

@{
    ViewData["Title"] = "Process Order";
}

<h2 class="text-center mb-4">Process Order</h2>

<div class="shadow-sm p-4 bg-white rounded">
    <h4>Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">Order ID:</dt>
        <dd class="col-sm-9">@Model.OrderId</dd>

        <dt class="col-sm-3 font-weight-bold">User ID:</dt>
        <dd class="col-sm-9">@Model.UserId</dd>

        <dt class="col-sm-3 font-weight-bold">Order Date:</dt>
        <dd class="col-sm-9">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3 font-weight-bold">Total Amount:</dt>
        <dd class="col-sm-9">@Model.TotalAmount</dd>

        <!-- Add other order details as needed -->
    </dl>
</div>

<form asp-action="UpdateOrderStatus" method="post" class="mt-4 shadow-sm p-4 bg-white rounded">
    <div class="form-group">
        <label for="status" class="font-weight-bold">Order Status:</label>
        <select id="status" name="status" class="form-control" required>
            <option value="">Select Status</option>
            <option value="Pending">Pending</option>
            <option value="Processed">Processed</option>
            <!-- Add other status options as needed -->
        </select>
    </div>
    <input type="hidden" name="id" value="@Model.OrderId" />
    <button type="submit" class="btn btn-primary btn-block">Update Status</button>
</form>

<style>
    h2 {
        margin-top: 20px;
        margin-bottom: 30px;
    }

    .shadow-sm {
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .font-weight-bold {
        font-weight: 700;
    }
</style>
