@model AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="text-center mb-4">Welcome to the Admin Dashboard</h1>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Product Management</h5>
                <p class="card-text">Add, edit, or delete products from the store.</p>
                <a asp-controller="Admin" asp-action="ViewProducts" class="btn btn-primary">Manage Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Order Management</h5>
                <p class="card-text">View and process customer orders.</p>
                <a asp-controller="Admin" asp-action="ViewOrders" class="btn btn-primary">Manage Orders</a>
            </div>
        </div>
    </div>
</div>

<style>
    h1 {
        margin-top: 20px;
        margin-bottom: 30px;
    }

    .card {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
