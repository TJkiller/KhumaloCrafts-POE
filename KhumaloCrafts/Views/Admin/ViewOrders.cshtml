<a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-secondary mb-3">Back</a>

@model List<KhumaloCrafts.Models.Order>

@{
    ViewData["Title"] = "View Orders";
}

<h2 class="text-center mb-4">View Orders</h2>

<table class="table table-striped table-hover shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    @if (order.Status == OrderStatus.Pending)
                    {
                        <a asp-action="ProcessOrder" asp-route-id="@order.OrderId" class="btn btn-primary btn-sm">Process</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        margin-top: 20px;
        margin-bottom: 30px;
    }

    .table {
        margin-top: 20px;
        background-color: #fff;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
