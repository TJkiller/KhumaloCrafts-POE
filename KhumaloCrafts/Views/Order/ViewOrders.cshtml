@model List<KhumaloCrafts.Models.Order>

<h2 class="text-center my-4">My Orders</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Order Date</th>
                    <th>Total Amount</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderDate</td>
                        <td>R@(order.TotalAmount)</td>
                        <td><a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-primary btn-sm">View Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center">No orders found.</p>
}

<style>
    .thead-light th {
        background-color: #f8f9fa;
        color: #212529;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
