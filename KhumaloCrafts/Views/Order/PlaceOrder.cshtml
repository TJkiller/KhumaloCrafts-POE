@model KhumaloCrafts.Models.ShoppingCart

<h2 class="text-center my-4">Place Order</h2>

@if (Model.ShoppingCartItems.Any())
{
    <form asp-controller="Order" asp-action="PlaceOrder" method="post">
        <input type="hidden" name="shoppingCartId" value="@Model.ShoppingCartId" />

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ShoppingCartItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>R@(item.Product.Price)</td>
                            <td>R@(item.Quantity * item.Product.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-right">
            <h4>Total Price: R@(Model.TotalPrice)</h4>
            <button type="submit" class="btn btn-primary btn-lg">Confirm Order</button>
        </div>
    </form>
}
else
{
    <p class="text-center">No items in the shopping cart.</p>
}

<style>
    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .text-right {
        margin-top: 20px;
    }
</style>
